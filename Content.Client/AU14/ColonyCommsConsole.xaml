<au14:ColonyCommsConsole
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.AU14.ColonyEconomy"
    xmlns:au14="clr-namespace:Content.Client.AU14"
    Title="Communications Console" MinSize="400 200">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <LineEdit Name="Announcement" Access="Public" Text=""
                     HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="SendMessage" Access="Public" Text="Send Message"
                    HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Control HorizontalExpand="True" />
            <Button Name="Emergency" Access="Public" Text="Toggle Siren"
                    StyleClasses="OpenBoth" HorizontalExpand="True" SizeFlagsStretchRatio="3"
                    Margin="0 2" />
            <Control HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>
</au14:ColonyCommsConsole>
